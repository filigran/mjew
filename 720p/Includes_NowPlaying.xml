<includes>
    <include name="Now_Playing">
    <control type="group">
            <posx>0</posx>
            <posy>608</posy>
            <animation effect="slide" start="0,0" end="0,-30" condition="System.GetBool(lookandfeel.enablerssfeeds)">conditional</animation>
            <control type="group"> <!-- now playing music -->
                <description>Now playing music</description>
                <posx>20</posx>
                <posy>-35</posy>
                <visible>Player.HasAudio</visible>
                <control type="image">
                    <description>Now playing cover</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>130</width>
                    <height>130</height>
                    <aspectratio>scale</aspectratio>
                    <fadetime>200</fadetime>
                    <texture background="true">$INFO[MusicPlayer.Cover]</texture>
                </control>
                <control type="image">
                    <description>Now playing cover reflection</description>
                    <posx>0</posx>
                    <posy>130</posy>
                    <width>130</width>
                    <height>130</height>
                    <aspectratio scalediffuse="false">scale</aspectratio>
                    <texture flipy="true" background="true" border="1" diffuse="mjew/home_weather_reflection.png">$INFO[MusicPlayer.Cover]</texture>
                    <fadetime>200</fadetime>
                    <colordiffuse>88ffffff</colordiffuse>
                </control>
                <control type="label">
                    <posx>140</posx>
                    <posy>85</posy>
                    <width>800</width>
                    <height>20</height>
                    <font>Font_Condensed_Caps_18</font>
                    <label>$INFO[MusicPlayer.Title]  ($INFO[MusicPlayer.Time] / $INFO[MusicPlayer.Duration])</label>
                    <textcolor>ffffffff</textcolor>
                    <shadowcolor>ff000000</shadowcolor>
                </control>
                <control type="label">
                    <posx>140</posx>
                    <posy>110</posy>
                    <width>800</width>
                    <height>20</height>
                    <font>Font_Condensed_Caps_18</font>
                    <label>[B][COLOR=ffffffff]$INFO[MusicPlayer.Artist][/COLOR][/B]  $INFO[MusicPlayer.Album]</label>
                    <textcolor>ffffffff</textcolor>
                    <shadowcolor>ff000000</shadowcolor>
                </control>
            </control>
            <control type="group"> <!-- now playing movies -->
                <description>Now playing movies</description>
                <posx>20</posx>
                <posy>-8</posy>
                <visible>Player.HasVideo + VideoPlayer.Content(Movies)</visible>
                <control type="videowindow">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>180</width>
                    <height>101</height>
                </control>
                <control type="label">
                    <posx>190</posx>
                    <posy>56</posy>
                    <width>800</width>
                    <height>20</height>
                    <font>Font_Condensed_Caps_18</font>
                    <label>[B]$INFO[VideoPlayer.Title][/B]</label>
                    <textcolor>ffffffff</textcolor>
                    <shadowcolor>ff000000</shadowcolor>
                </control>
                <control type="label">
                    <posx>190</posx>
                    <posy>81</posy>
                    <width>800</width>
                    <height>20</height>
                    <font>Font_Condensed_Caps_18</font>
                    <label>$INFO[VideoPlayer.Time] / $INFO[VideoPlayer.Duration]</label>
                    <textcolor>ffffffff</textcolor>
                    <shadowcolor>ff000000</shadowcolor>
                </control>
            </control>
            <control type="group"> <!-- now playing episodes -->
                <description>Now playing episodes</description>
                <posx>20</posx>
                <posy>-8</posy>
                <visible>Player.HasVideo + VideoPlayer.Content(Episodes)</visible>
                <control type="videowindow">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>180</width>
                    <height>101</height>
                </control>
                <control type="label">
                    <posx>190</posx>
                    <posy>56</posy>
                    <width>800</width>
                    <height>20</height>
                    <font>Font_Condensed_Caps_18</font>
                    <label>$INFO[VideoPlayer.Title] ($INFO[VideoPlayer.Time] / $INFO[VideoPlayer.Duration])</label>
                    <textcolor>ffffffff</textcolor>
                    <shadowcolor>ff000000</shadowcolor>
                </control>
                <control type="label">
                    <posx>190</posx>
                    <posy>81</posy>
                    <width>800</width>
                    <height>20</height>
                    <font>Font_Condensed_Caps_18</font>
                    <label>[B]$INFO[VideoPlayer.TVShowTitle][/B]  $INFO[VideoPlayer.Season,SÃ¤song ], $INFO[VideoPlayer.Episode,Avsnitt ]</label>
                    <textcolor>ffffffff</textcolor>
                    <shadowcolor>ff000000</shadowcolor>
                </control>
            </control>
        </control>
    </include>
</includes>
