<includes>
    <include name="Totals_Count">
        <control type="group">
            <posx>20</posx>
            <posy>20</posy>
            <control type="group">
                <description>Total labels and values for movies</description>
                <visible>Container.Content(Movies)</visible>
                <control type="label">
                    <description>Totals label</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>300</width>
                    <font>Font_Condensed_24</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <label>$INFO[Container(Movies).NumItems,, $LOCALIZE[31370]]</label>
                </control>
                <control type="fadelabel">
                    <description>Watched / unwatched movies count</description>
                    <posx>0</posx>
                    <posy>30</posy>
                    <width>250</width>
                    <font>Font_Condensed_18</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <scrollout>false</scrollout>
                    <pauseatend>5000</pauseatend>
                    <label>$INFO[Window(Home).Property(Movies.Watched),, $LOCALIZE[31332]]</label>
                    <label>$INFO[Window(Home).Property(Movies.UnWatched),, $LOCALIZE[31333]]</label>
                </control>
            </control>
            <control type="group">
                <description>Totals labels and values for TVShows</description>
                <visible>Container.Content(TVShows)</visible>
                <control type="label">
                    <description>Total show count</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>300</width>
                    <font>Font_Condensed_24</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <label>$INFO[Container(TVShows).NumItems,, $LOCALIZE[20343]]</label>
                </control>
                <control type="fadelabel">
                    <description>Total / watched / unwatched episodes count</description>
                    <posx>0</posx>
                    <posy>30</posy>
                    <width>190</width>
                    <font>Font_Condensed_18</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <pauseatend>5000</pauseatend>
                    <scrollout>false</scrollout>
                    <label>$INFO[Window(Home).Property(Episodes.Count),, $LOCALIZE[31382]]</label>
                    <label>$INFO[Window(Home).Property(Episodes.UnWatched),, $LOCALIZE[31384]]</label>
                    <label>$INFO[Window(Home).Property(Episodes.Watched),, $LOCALIZE[31383]]</label>
                </control>
            </control>
        </control>
    </include>
</includes>
