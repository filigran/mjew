<window id="115">
    <defaultcontrol>1</defaultcontrol>
    <visible>Window.IsActive(fullscreenvideo) + [Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Window.IsActive(VideoOSD) | Window.IsActive(fullscreeninfo)]</visible>
    <controls>
        <control type="group">
            <description>Big play/pause/rew/ff images in center of screen</description>
            <posx>512</posx>
            <posy>183</posy>
            <include>OSD_Control_images</include>
            <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
        </control>
        <control type="group">
            <description>Time and date at top</description>
            <animation effect="slide" start="0,-100" end="0,0" time="300">WindowOpen</animation>
            <animation effect="slide" start="0,0" end="0,-100" time="300">WindowClose</animation>
            <include>Global_Time</include>
        </control>
        <control type="group">
            <description>The seekbar itself</description>
            <posx>13</posx>
            <posy>630</posy>
            <animation effect="slide" start="0,220" end="0,0" time="300">WindowOpen</animation>
            <animation effect="slide" start="0,0" end="0,220" time="300">WindowClose</animation>
            <control type="image">
                <description>Background image</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1254</width>
                <height>80</height>
                <texture border="10">mjew/osd_background.png</texture>
                <colordiffuse>cc000000</colordiffuse>
            </control>
            <control type="image">
                <description>Background glow</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1254</width>
                <height>80</height>
                <texture border="10">mjew/osd_background_glow.png</texture>
                <colordiffuse>white</colordiffuse>
            </control>
            <control type="group">
                <visible>VideoPlayer.Content(Movies)</visible>
                <control type="image">
                    <description>Poster image for movies</description>
                    <posx>30</posx>
                    <posy>-130</posy>
                    <width>116</width>
                    <height>176</height>
                    <texture background="true" diffuse="mjew/poster_diffuse.png">$INFO[VideoPlayer.Cover]</texture>
                    <aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
                </control>
                <control type="image">
                    <description>Poster image gloss for movies</description>
                    <posx>30</posx>
                    <posy>-130</posy>
                    <width>116</width>
                    <height>176</height>
                    <texture background="true">mjew/poster_gloss.png</texture>
                    <colordiffuse>20ffffff</colordiffuse>
                    <aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
                </control>
                <control type="image">
                    <description>Poster image reflection for movies</description>
                    <posx>30</posx>
                    <posy>46</posy>
                    <width>116</width>
                    <height>90</height>
                    <texture flipy="true" background="true" diffuse="mjew/poster_reflection.png">$INFO[VideoPlayer.Cover]</texture>
                    <aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
                </control>
                <control type="image">
                    <description>Poster image gloss reflection for movies</description>
                    <posx>30</posx>
                    <posy>46</posy>
                    <width>116</width>
                    <height>90</height>
                    <texture flipy="true" diffuse="mjew/poster_reflection.png" background="true">mjew/poster_gloss.png</texture>
                    <colordiffuse>20ffffff</colordiffuse>
                    <aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
                </control>
            </control>
            <control type="image">
                <description>Clearart image for episodes</description>
                <posx>270r</posx>
                <posy>-143</posy>
                <width>250</width>
                <height>140</height>
                <texture background="true">$INFO[Player.FolderPath,,/../clearart.png]</texture>
                <animation effect="fade" start="0" end="100" time="300">Visible</animation>
                <animation effect="fade" start="100" end="0" time="300">Hidden</animation>
                <visible>VideoPlayer.Content(Episodes) + !Window.IsVisible(VideoOSD) + !Window.IsVisible(FullScreenInfo) + Skin.HasSetting(Episodes_Show_Clearart)</visible>
            </control>
            <control type="label">
                <description>Elapsed time</description>
                <posx>160</posx>
                <posy>20</posy>
                <width>140</width>
                <height>20</height>
                <font>Font_Condensed_18</font>
                <textcolor>white</textcolor>
                <align>left</align>
                <aligny>center</aligny>
                <label>$INFO[Player.Time]</label>
            </control>
            <control type="progress" id="23">
                <description>Progressbar</description>
                <posx>235</posx>
                <posy>26</posy>
                <width>900</width>
                <height>10</height>
                <texturebg>osd_back.png</texturebg>
                <midtexture>osd_mid.png</midtexture>
                <colordiffuse>ff498999</colordiffuse>
                <info>Player.Progress</info>
            </control>
            <control type="label">
                <description>Duration</description>
                <posx>55r</posx>
                <posy>20</posy>
                <width>140</width>
                <height>20</height>
                <font>Font_Condensed_18</font>
                <textcolor>white</textcolor>
                <align>right</align>
                <aligny>center</aligny>
                <label>$INFO[Player.Duration]</label>
            </control>
            <control type="label">
                <description>Chapter</description>
                <posx>160</posx>
                <posy>40</posy>
                <width>200</width>
                <height>20</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>Font_Condensed_Caps_18</font>
                <textcolor>white</textcolor>
                <label>$INFO[Player.Chapter,[COLOR=ff498999]$LOCALIZE[21396]:[/COLOR] ]$INFO[Player.Chaptercount, / ]</label>
                <visible>Player.ChapterCount</visible>
            </control>
            <control type="label">
                <description>Remaining time</description>
                <posx>490</posx>
                <posy>40</posy>
                <width>300</width>
                <height>20</height>
                <font>Font_Condensed_Caps_18</font>
                <textcolor>white</textcolor>
                <align>center</align>
                <aligny>center</aligny>
                <label>$INFO[VideoPlayer.TimeRemaining,[COLOR=ff498999]$LOCALIZE[31437]:[/COLOR] ]</label>
            </control>
            <control type="label">
                <description>Finish time</description>
                <posx>55r</posx>
                <posy>40</posy>
                <width>175</width>
                <height>20</height>
                <font>Font_Condensed_Caps_18</font>
                <textcolor>white</textcolor>
                <align>right</align>
                <aligny>center</aligny>
                <label>$INFO[Player.FinishTime,[COLOR=ff498999]$LOCALIZE[31049]:[/COLOR] ]</label>
            </control>
            <control type="group">
                <visible>[[Player.Paused + Player.Caching] + !Player.Seeking] | [Player.DisplayAfterSeek + ![player.forwarding | player.rewinding]]</visible>
                <posx>534</posx>
                <posy>-80</posy>
                <control type="image">
                    <description>Background image</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>212</width>
                    <height>81</height>
                    <texture border="10">mjew/osd_popup_background.png</texture>
                    <colordiffuse>aa000000</colordiffuse>
                </control>
                <control type="image">
                    <description>Background glow</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>212</width>
                    <height>81</height>
                    <texture border="10">mjew/osd_popup_glow.png</texture>
                    <colordiffuse>white</colordiffuse>
                </control>
                <control type="label">
                    <description>Cache label and value</description>
                    <posx>21</posx>
                    <posy>25</posy>
                    <width>170</width>
                    <height>20</height>
                    <align>center</align>
                    <aligny>center</aligny>
                    <font>Font_Condensed_Caps_18</font>
                    <textcolor>white</textcolor>
                    <label>[COLOR=ff498999]$LOCALIZE[15107]:[/COLOR] $INFO[Player.CacheLevel]%</label>
                    <visible>Player.Caching + !Player.Seeking</visible>
                </control>
                <control type="label">
                    <description>Search time label and value</description>
                    <posx>21</posx>
                    <posy>25</posy>
                    <width>170</width>
                    <height>20</height>
                    <align>center</align>
                    <aligny>center</aligny>
                    <font>Font_Condensed_Caps_18</font>
                    <textcolor>white</textcolor>
                    <label>$INFO[Player.SeekOffset,[COLOR=ff498999]$LOCALIZE[773]:[/COLOR] ]</label>
                    <visible>Player.DisplayAfterSeek + ![player.forwarding | player.rewinding]</visible>
                </control>
            </control>
        </control>
    </controls>
</window>
